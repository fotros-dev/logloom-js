{
    "compilerOptions": {
        "types": ["node"],
        "skipLibCheck": true,
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "resolveJsonModule": true
    },
    "include": ["src"]
}
